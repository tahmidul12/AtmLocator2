<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_offline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:background="#D3D3D3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.atm.atmlocator.Offline"
    tools:showIn="@layout/activity_offline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp">
        <TextView
            android:id="@+id/textv_noSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sorry no items found!!!"
            android:textStyle="bold|italic"
            android:visibility="gone"
            android:textSize="20sp"/>
        <ListView
            android:id="@+id/listv_bank"
            android:layout_width="match_parent"
            android:dividerHeight="10dp"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlmenu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tpWhiteColor"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_dbbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DBBL"/>
            <RadioButton
                android:id="@+id/rb_brac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brac Bank"/>
            <RadioButton
                android:id="@+id/rb_ific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IFIC Bank"/>
            <RadioButton
                android:id="@+id/rb_exim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exim Bank"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
